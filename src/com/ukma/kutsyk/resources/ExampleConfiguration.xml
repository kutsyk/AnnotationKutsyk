<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="greetingService" class="com.ukma.kutsyk.domain.GreetingServiceImpl">
        <constructor-arg type="String" value="Hello World!" />
    </bean>

    <bean id="bus" class="com.ukma.kutsyk.domain.Bus">
        <property name="message" value="Transport type is Bus" />
    </bean>

    <bean id="bus2" class="com.ukma.kutsyk.domain.Bus"></bean>

    <bean id="car" class="com.ukma.kutsyk.domain.Car">
        <constructor-arg type="String" value="Ferrari" />
        <constructor-arg type="int" value="4" />
    </bean>

    <interceptor id="interceptor1" class="com.ukma.kutsyk.domain.CapitalizingInterceptor"/>

    <interceptor id="interceptor2" class="com.ukma.kutsyk.domain.LowerCasingInterceptor"/>


    <!--
